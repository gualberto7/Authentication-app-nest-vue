{
  "name": "client",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "docker:up": "docker-compose -f ../docker-compose.yml up -d",
    "docker:down": "docker-compose -f ../docker-compose.yml down",
    "docker:test:e2e": "docker-compose -f ../docker-compose.yml up --abort-on-container-exit",
    "test:integration:run": "yarn vitest run --config ./vitest.config.integration.js",
    "test:docker:start": "docker-compose -f ../docker-compose.test.yml up -d",
    "test:docker:run": "npm run test:docker:start && npm run test:integration:run",
    "test:docker:teardown": "docker-compose -f ../docker-compose.test.yml down",
    "test:integration": "npm run test:docker:run && npm run test:docker:teardown"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "node-fetch": "2.6.1",
    "pinia": "^2.2.2",
    "vue": "^3.4.38",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.4",
    "@tailwindcss/typography": "^0.5.14",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.16.1",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitest/coverage-istanbul": "^2.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "cypress": "^13.13.3",
    "daisyui": "^4.12.10",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-vue": "^9.27.0",
    "jsdom": "^24.1.1",
    "msw": "^2.3.5",
    "npm-run-all2": "^6.2.2",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "start-server-and-test": "^2.0.5",
    "tailwindcss": "^3.4.10",
    "typescript": "~5.4.5",
    "vite": "^5.4.2",
    "vite-plugin-vue-devtools": "^7.3.8",
    "vitest": "2.0.5",
    "vue-tsc": "^2.0.29"
  }
}